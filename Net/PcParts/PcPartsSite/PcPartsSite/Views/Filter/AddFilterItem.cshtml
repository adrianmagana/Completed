@model PcPartsSite.Models.FilterItem
@{
    ViewData["Title"] = "Add Filter Item";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>@ViewBag.Title</h2>

<form asp-action="AddFilterItem">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Filter" class="control-label"></label>
        <select asp-for="FilterId" asp-items="ViewBag.Filters"></select>
        <span asp-validation-for="FilterId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Display" class="control-label"></label>
        @Html.EditorFor(c => c.Display)
        <span asp-validation-for="Display" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Value" class="control-label"></label>
        @Html.EditorFor(c => c.Value)
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MinValue" class="control-label"></label>
        @Html.EditorFor(c => c.MinValue)
        <span asp-validation-for="MinValue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaxValue" class="control-label"></label>
        @Html.EditorFor(c => c.MaxValue)
        <span asp-validation-for="MaxValue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit">Submit</button>
        <button type="reset">Reset</button>
    </div>
</form>