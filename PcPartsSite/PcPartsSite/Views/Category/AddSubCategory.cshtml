@model PcPartsSite.Models.SubCategory
@{
    ViewData["Title"] = "Add Sub-Category";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>@ViewBag.Title</h2>

<form asp-action="AddSubCategory">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Category" class="control-label"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubCatName" class="control-label"></label>
        @Html.EditorFor(c => c.SubCatName)
        <span asp-validation-for="SubCatName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit">Submit</button>
        <button type="reset">Reset</button>
    </div>
</form>