@model IEnumerable<PcPartsSite.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="flex marginV-20">
    <h2 class="no-margin">@ViewBag.Title</h2>
    <button class="marginL-1" type="button" onclick="location.href='@Url.Action("AddProduct")'" style="margin-left:1em;">Add Product</button>
</div>
@{
    PcPartsSite.Models.Product demoProd = new Product();
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(p => demoProd.Name)</th>
            <th>@Html.DisplayNameFor(p => demoProd.Price)</th>
            <th>@Html.DisplayNameFor(p => demoProd.Discount)</th>
            <th>@Html.DisplayNameFor(p => demoProd.Description)</th>
            <th>@Html.DisplayNameFor(p => demoProd.SubCategory.Category.CatName)</th>
            <th>@Html.DisplayNameFor(p => demoProd.SubCategory.SubCatName)</th>
            <th style="text-align:end;">Edit / Delete</th>
        </tr>
    </thead> 

    <tbody>
        @foreach (PcPartsSite.Models.Product product in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => product.Name)</td>
                <td>@Html.DisplayFor(x => product.Price)</td>
                <td>@Html.DisplayFor(x => product.Discount)</td>
                <td>@Html.DisplayFor(x => product.Description)</td>
                <td>@Html.DisplayFor(x => product.SubCategory.Category.CatName)</td>
                <td>@Html.DisplayFor(x => product.SubCategory.SubCatName)</td>
                <td style="text-align:end;">
                    <a href="@Url.Action("UpdateProduct", new { id = product.Id })"><span class="glyphicon glyphicon-pencil"></span></a> |
                    <a href="@Url.Action("DeleteProduct", new { id = product.Id })"><span class="glyphicon glyphicon-remove"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>